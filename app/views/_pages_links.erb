<%# required locals: cur_page, size, per_page and identifier (must be an identifier)%>
<%
  pages = ((1.0*size)/per_page).ceil
  pages = 1 if pages == 0
%>

<% if pages > 1 %>
    <div class="pagination pagination-centered">
      <ul>
        <li class="<%= 'disabled' if cur_page == 0 %>">
          <a <%= cur_page == 0 ? "": "href='#{request.path_info}?#{identifier.to_s}=#{cur_page-1}'"%>><%=@LANG["PREV"]%></a>
        </li>
        <% for i in 0...pages %>
          <li class="<%= 'disabled' if cur_page == i %>">
            <a <%=cur_page == i ? "" : "href='#{request.path_info}?#{identifier.to_s}=#{i}'"%>"><%=i+1%></a>
          </li>
        <% end %>
        <li class="<%= 'disabled' if cur_page+1 == pages %>">
          <a <%= cur_page+1 == pages ? "" :"href='#{request.path_info}?#{identifier.to_s}=#{cur_page+1}'"%>><%=@LANG["NEXT"]%></a>
        </li>
      </ul>
    </div>
<% end %>
