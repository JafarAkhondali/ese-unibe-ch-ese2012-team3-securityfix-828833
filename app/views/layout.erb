<!DOCTYPE html>
<html lang="en">
    <head>
      <title><%= @title %></title>

      <script src="/js/libs/jquery-1.7.2.js"></script>
      <script src="/js/libs/getVarFromUrl.js"></script>
      <script src="/bootstrap/js/bootstrap.js"></script>

      <script src="/js/jquery-ui.js"></script>
      <script src="/js/jquery-ui-timepicker-addon.js"></script>

      <script>
          $(function() {
              $( "#end_time" ).datetimepicker({
                  dateFormat: 'dd.mm.yy',  minDate: new Date()
              });
          });
      </script>

      <link rel="stylesheet" href="/css/jquery-ui.css" />
      <link rel="stylesheet" href="/css/custom.css" />
      <link href="/css/jquery-ui-timepicker-addon.css" rel="stylesheet" />
      
      <link href="/bootstrap/css/bootstrap.css" rel="stylesheet" />
      <link href="/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
      <style type="text/css">
        body {
          padding-top: 100px;
          padding-bottom: 40px;
        }

        .bigpadding {
          padding-left: 3em;
        }
      </style>
    </head>
    <body>
        <%= erb :_nav %>
        <div class="container">
          <%
          # flash[:success] resp. flash[:error] contains template name
          %>
          <%= erb :"notifications/#{flash[:success]}" if flash[:success] %>
          <%= erb :"notifications/#{flash[:error]}" if flash[:error] %>

          <section id="content">
            <div class="row">
              <%= erb :_sidebar %>
              <div class="span10">
                <%= yield %>
              </div>
            </div>
          </section>
        </div>
        

    </body>
</html>

