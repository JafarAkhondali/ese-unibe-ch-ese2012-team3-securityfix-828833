<% @title = "Marketplace" %>

<section id="content">
<div class="row">
  <%= erb :_sidebar %>
  <div class="span10">
    <h1>Login</h1>
    <p>Don't have an account? <a href="/register">Click here to register</a>!</p>
    <form class="form-horizontal" method="POST" action="/login">
      <fieldset>
          <%= erb :_text_control, :locals => {:name => :name, :label => "Username"}%>

          <%= erb :_text_control, :locals => {:name => :password, :label => "Password", :password => true}%>

        <div class="form-actions">
          <button class="btn btn-info" type="submit">Login</button>
        </div>
      </fieldset>
    </form>
  </div>
</div>
</section>

