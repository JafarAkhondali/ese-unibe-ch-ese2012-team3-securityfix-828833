<% @title = "Organization: #{@org.name}" %>

<section id="content">
  <div class="row">
    <%= erb :_sidebar %>
    <div class="span10">
      <h1>Organization: <%= xss @org.name %></h1>

      <%= erb :_image_rect, :locals => {:filename => @org.image_file_name, :size => LARGEIMAGESIZE} %>

      <% if @user != @current_login && @current_login == @current_user%>
          <form action="/follow" method="POST">
            <input type="hidden" name="follow_id" value="<%= xss @org.id%>" />
            <input type="hidden" name="agent" value="org" />
            <% if @current_login.following.include?(@org) %>
                <input type="submit" class="btn btn-danger small" name="submit" value="Unfollow" />
            <%else%>
                <input type="submit" class="btn btn-info small" name="submit" value="Follow" />
            <%end%>
          </form>
      <%end%>

      <% if !@org.about.empty? %>
          <p>About: <%= xss @org.about %></p>
      <% end %>

      <h3 style="padding-top: 50px;"><%= xss @org.name %>'s Items</h3>

      <% if @items.size > 0 %>

          <%=erb :_item_list, :locals=>{
                  :items => @items,
                  :highlight_active => true
          }%>

      <% else %>
        <i>This organization has no items.</i>
      <% end %>

      <% if @org == @current_user %>
          <form class="form-horizontal" method="GET" action="/item/create">
            <fieldset>
              <div class="form-actions">
                <button class="btn btn-info" type="submit">Add a new item...</button>
              </div>
            </fieldset>
          </form>
      <% end %>

      <hr />

      <h3><%= xss @org.name %>'s Members</h3>

      <%=erb :_agent_list, :locals=>{:agents => @org.members,
                                     :version => (@org.admin == @current_login ? :remove_org_member : nil) ,
                                     :org => @org

      }%>


      <hr />

      <% if @org.admin == @current_login and @current_user == @org %>
        <h3>Add member to organization</h3>
        <% if addable_users.length > 0 %>
            <form action="/organization/<%= @org.id %>/add_member" method="POST">
              <fieldset>
                <select name="user_to_add">
                <% for user in addable_users %>
                  <option value="<%= user.id %>"><%= user.name %></option>
                <% end %>
                </select>
                <button class="btn btn-info" type="submit">Add user</button>
              </fieldset>
            </form>
        <% else %>
          <p>No users to add available</p>
        <% end %>
      <% end %>

    </div>
  </div>
</section>


