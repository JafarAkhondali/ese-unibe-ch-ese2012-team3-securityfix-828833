<% if filename and size %>
    <div class="item-img" style="
            width:<%="#{size}"%>px;
            height:<%="#{size}"%>px;
            background-image: url('<%= "/"+filename %>'); /*Include all images referring to public/ to simplify distinguishing them from other pages*/
            background-repeat: no-repeat;
            background-size: contain;">
      <!-- only way to scale to height OR width, retaining aspect http://stackoverflow.com/a/10016640/524504-->
    </div>
<% end %>