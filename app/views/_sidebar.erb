  <% if @current_user %>
  <div style="font-size:0.8em;">
    <p>Logged in as <b><a href='<%= "/profile/#{@current_user.id}" %>'><%= xss @current_user.name %></a></b></p>
    <p>Credits: <%= xss @current_user.credit %></p>
  </div>
  <% end %>
</div>
