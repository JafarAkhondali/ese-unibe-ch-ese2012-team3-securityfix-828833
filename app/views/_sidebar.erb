<div class="span2">
  <div class="well" style="padding: 8px 0;">
    <ul class="nav nav-list">

      <li
      <%if @current_nav_item == :marketplace%>
      class="active"
      <%end%>
      ><a href="/"><i class="icon-home"></i><%=@LANG["MARKETPLACE"]%></a></li>

      <% if @current_agent %>

          <li
            <%if @current_nav_item == :sellers%>
                class="active"
            <%end%>
          ><a href="/all_users"><i class="icon-list"></i><%=@LANG["SELLERS"]%></a></li>

          <li
            <%if @current_nav_item == :my_profile%>
                class="active"
            <%end%>
          >
              <%if @current_agent == @current_user %>
                    <a href= <%= @current_agent.profile_route %>><i class="icon-user"></i><%=@LANG["MY_PROFILE"]%></a>
                <% else %>
                    <a href= <%= @current_agent.profile_route %>><i class="icon-briefcase"></i><%=@LANG["ORGANIZATION"]%></a>
                <% end %>
          </li>

          <li
            <%if @current_nav_item == :new_item%>
                class="active"
            <%end%>
          ><a href="/item/create"><i class="icon-plus"></i><%=@LANG["NEW_ITEM"]%></a></li>


          <li
            <%if @current_nav_item == :new_offer%>
                class="active"
            <%end%>
          ><a href="/item/offer"><i class="icon-plus"></i><%=@LANG["NEW_OFFER"]%></a></li>

          <% if @current_agent == @current_user %>

          <li
            <%if @current_nav_item == :new_org%>
                class="active"
            <%end%>
          ><a href="/organization/create"><i class="icon-plus"></i><%=@LANG["NEW_ORGANIZATION"]%></a></li>

          <li
            <%if @current_nav_item == :settings%>
                class="active"
            <%end%>
          ><a href="/settings"><i class="icon-wrench"></i><%=@LANG["ACCOUNT_SETTINGS"]%></a></li>

          <% else %>

          <li
            <%if @current_nav_item == :settings%>
                class="active"
            <%end%>
          ><a href="/organization/<%= @current_agent.id %>/settings"><i class="icon-wrench"></i><%=@LANG["ORG_SETTINGS"]%></a></li>

          <% end %>
      <% end %>
    </ul>
  </div>


  <% if @current_agent %>
  <div style="font-size:1em;">
    <p><%=@LANG["LOGGED_IN_AS"]%>
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
        <%if session[:organization_id].nil?%>
            <%= xss @current_user.name %>
        <%else%>
            <%= xss Organization.organization_by_id(session[:organization_id].to_i).name %>
        <%end%>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href='<%= "/user/switch" %>'><i class="icon-user"></i><%= xss @current_user.name %></a></li>
        <li class="divider"></li>
        <%for organization in @current_user.list_organizations %>
            <li><a href='<%= organization.profile_route %>/switch'><i class="icon-briefcase"></i><%= xss organization.name %></a></li>
        <%end%>
      </ul>
    </div>
    </p>
    <p style="font-weight: bold;"><%=@LANG["CREDITS"]%>: <%= xss ts(@current_agent.credit) %></p>


  </div>
  <% end %>

  <!--
  <p>Set language <img src="<%= @current_language.icon%>"/> to<br/> <%
     LANGUAGES.each{| key, value |
       next if value == @current_language
  %>
        <a href='/set_language/<%= key %>'><img src="<%= value.icon%>"/></a>
    <%
    }
    %></p>
    -->

  <p><%=@LANG["LANGUAGE"]%>:<%
   LANGUAGES.each{| key, value |
%>
        <a href='/set_language/<%= key %>' title='<%= key %>'><img src="<%= value.icon%>"/></a>
    <%
   }
%></p>
</div>
