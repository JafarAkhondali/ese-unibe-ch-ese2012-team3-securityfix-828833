<% @title = "Item: #{@item.name}" %>

<section id="content">
  <div class="row">
    <%= erb :_sidebar %>

    <div class="span10">
      <h1>Item: <%= xss @item.name %></h1>

      <table style="width:400px"><tr><%= erb :_item_button, :locals => {:item => @item, :current_user => @current_user} %></tr></table>

      <%= erb :_image_rect, :locals => {:filename => @item.image_file_name, :size => LARGEIMAGESIZE} %>

      <p>Owner: <%= erb :_user_link, :locals => {:user => @item.owner} %></p>
      <p>Price: <%= xss @item.price %></p>
      <% if !@item.about.empty? %>
          <p>Description: <%= xss @item.about %></p>
      <% end %>

      <h3>Comments</h3>
      <%if @item.comments.length == 0%>
        This item has no comments yet.
      <%else%>
        <%for comment in @item.comments%>
          <hr />
        <p><%= erb :_user_link, :locals => {:user => comment.creator} %>: <%= xss comment %></p>
        <%end%>
      <%end%>
    </div>
  </div>
</section>