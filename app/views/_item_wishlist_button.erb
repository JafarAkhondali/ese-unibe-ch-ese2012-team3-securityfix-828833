<% if !Market::Item.items_by_agent(@current_agent).include?(@item) && @current_user == @current_agent%>
  <td>
    <form action="/item/<%= xss @item.id %> /watchlist" method="POST">
      <% if @current_agent.wishlist.include?(@item) %>
        <input type="submit" class="btn btn-danger small" name="submit" value="<%=@LANG["REMOVE_FROM_WISHLIST"]%>" />
      <% else %>
        <input type="submit" class="btn btn-info small" name="submit" value="<%=@LANG["ADD_TO_WISHLIST"]%>" />
      <% end %>
    </form>
  </td> 
<% end %>
